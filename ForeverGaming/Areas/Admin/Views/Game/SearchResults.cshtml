@model SearchViewModel

@{
    ViewData["Title"] = " | Search Results";
}

<div class="row">
    <div class="col">
        <h5>@Model.Header</h5>
    </div>
    <div class="col">
        <div class="float-right pr-2">
            <a asp-action="Index" style="color: black">New Search</a>
        </div>
    </div>
</div>

<table class="table table-bordered">
    <thead class="thead-dark">
    <tr>
        <th style="color: aqua">Game</th>
        <th style="color: aqua">Genre</th>
        <th style="color: aqua">Type</th>
        <th style="color: aqua">Format</th>
        <th style="color: aqua"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var game in Model.Games)
    {
        <tr>
            <td>
                <a asp-action="Details" asp-controller="Game"
                   asp-area="" asp-route-id="@game.GameId"
                   asp-route-slug="@game.Name.Slug()" style="color: black">@game.Name</a>
            </td>
            <td>@game.Genre.Name</td>
            <td>@game.Type.Name</td>
            <td>@game.Format.Name</td>
            <td>
                <div class="float-right">
                    <a asp-action="Edit" asp-route-id="@game.GameId"
                       class="btn" style="background-color: aqua; border-block-color: black; font-weight: bold">Edit</a>
                    <a asp-action="Delete" asp-route-id="@game.GameId"
                       class="btn" style="background-color: aqua; border-block-color: black; font-weight: bold">Delete</a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>
