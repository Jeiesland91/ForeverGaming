@model IEnumerable<Genre>

@{
    ViewData["Title"] = " | Manage Genres";
}

<h1 class="mb-2">Manage Genres</h1>

<h5 class="mt-2"><a asp-action="Add" asp-area="Admin" style="color: black">Add a Genre</a></h5>

<table class="table table-bordered table-striped table-sm">
    <thead class="thead-dark">
    <tr><th style="color:aqua">GenreId</th><th style="color:aqua">Name</th><th style="color:aqua"></th></tr>
    </thead>
    <tbody>
    @foreach (Genre genre in Model)
    {
        <tr>
            <td>@genre.GenreId</td>
            <td>@genre.Name</td>
            <td>
                <a asp-action="ViewGames" asp-area="Admin" asp-route-id="@genre.GenreId"
                   class="btn" style="background-color: aqua; border-block-color: black; font-weight: bold">View Games</a>
                <a asp-action="Edit" asp-area="Admin" asp-route-id="@genre.GenreId"
                   class="btn" style="background-color: aqua; border-block-color: black; font-weight: bold">Edit</a>
                <a asp-action="Delete" asp-area="Admin" asp-route-id="@genre.GenreId"
                   class="btn" style="background-color: aqua; border-block-color: black; font-weight: bold">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>